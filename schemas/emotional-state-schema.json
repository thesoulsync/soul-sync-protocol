{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Emotional State Schema",
  "type": "object",
  "properties": {
    "primary_emotion": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "valence": { "type": "number" },
        "arousal": { "type": "number" },
        "confidence": { "type": "number" }
      },
      "required": ["type", "valence", "arousal", "confidence"]
    },
    "secondary_emotions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "confidence": { "type": "number" }
        },
        "required": ["type", "confidence"]
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "baseline_deviation": { "type": "number" },
        "trajectory": { "type": "string" },
        "pattern": { "type": "string" }
      },
      "required": ["baseline_deviation", "trajectory", "pattern"]
    }
  },
  "required": ["primary_emotion", "secondary_emotions", "context"]
}
